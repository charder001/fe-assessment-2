     </label>

     <label>Retro
          <input id="retro" type="radio" name="bike" value="retro">
     </label>

     <label>Dirt
          <input id="dirt" type="radio" name="bike" value="dirt">
     </label>
     </section>
     
     <h2>What color helmet do you wear?</h2>
     <section id="radio">
     <label>Green helmet
               <input id="green" type="radio" name="bike" value="green">
          </label>

          <label>Red helmet
                    <input id="red" type="radio" name="bike" value="red">
               </label>

               <label>Black helmet
                         <input id="black" type="radio" name="bike" value="black">
                    </label>
               </section>

               <h2>How fast do you ride?</h2>
               <section id="radio">
               <label>Fast
                         <input id="fast" type="radio" name="pace" value="fast">
                    </label>
          
                    <label>Average
                              <input id="average" type="radio" name="pace" value="average">
                         </label>


